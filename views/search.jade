extends layout

block head
  link(rel="stylesheet", href="stylesheets/search.css")
  link(rel="stylesheet", href="stylesheets/header.css")

block body
  include header
  div.body
    div.timeLine
      div.update
        h4 更新
      div.posts
        - for(var i = posts.length - 1; i >= 0; i--) {
          div.allPosts
            - let src = `/images/${posts[i].user.icon}.png`
            img.icon(src=src)
            div.postRight
              div.nameSpace
                h5 #{posts[i].user.name}
              div.textSpace
                p  #{posts[i].text}
        - }
    
